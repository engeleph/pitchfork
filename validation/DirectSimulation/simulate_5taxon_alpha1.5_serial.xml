<beast version="2.0"
       namespace="pitchfork.model
                  :pitchfork.util
                  :feast.simulation
                  :beast.core.parameter
                  :beast.evolution.alignment
                  :beast.evolution.tree
                  :beast.evolution.tree.coalescent">


     <lambdaCoalTree spec="SimulatedLambdaCoalescentTree" id="tree">
        <model spec="LambdaCoalescentModel">
          <alpha spec="RealParameter" value="1.5"/>
          <taxonSet idref="taxonSet"/>
        </model>

      <populationFunction spec="ConstantPopulation">
        <popSize spec="RealParameter" value="1.0"/>
      </populationFunction>

      <trait spec="TraitSet" traitname="date-backward">
        <taxa spec="TaxonSet" id="taxonSet">
            <taxon spec="Taxon" id="t1"/>
            <taxon spec="Taxon" id="t2"/>
            <taxon spec="Taxon" id="t3"/>
            <taxon spec="Taxon" id="t4"/>
            <taxon spec="Taxon" id="t5"/>
        </taxa>

          t1=0.0, t2=0.5, t3=0.5, t4=1.0, t5=1.5
      </trait>
     </lambdaCoalTree>

  <run spec="GPSimulator" nSims="100000">

    <simulationObject idref="tree"/>

    <logger logEvery="1" fileName="$(filebase).log">
        <log spec="PolytomyCountLogger" tree="@tree"/>
        <log spec="TreeStatLogger" tree="@tree"/>
    </logger>

    <logger logEvery="1" fileName="$(filebase).trees">
      <log idref="tree"/>
    </logger>
  </run>
</beast>
