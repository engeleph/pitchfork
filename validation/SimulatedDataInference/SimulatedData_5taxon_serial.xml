<beast version="2.0"
       namespace="beast.core
                 :beast.core.util
                 :beast.core.parameter
                 :beast.evolution.alignment
                 :beast.evolution.likelihood
                 :beast.evolution.tree
                 :beast.evolution.tree.coalescent
                 :beast.evolution.sitemodel
                 :beast.evolution.substitutionmodel
                 :beast.evolution.operators
                 :beast.math.distributions
                 :feast.simulation
                 :pitchfork.models
                 :pitchfork.operators
                 :pitchfork.util">

    <tree id="simulated_tree" spec="SimulatedLambdaCoalescentTree"
               fileName="$(filebase).true.tree">
        <model spec="LambdaCoalescentModel">
            <alpha spec="RealParameter" value="1.5"/>
            <taxonSet idref="taxonSet"/>
        </model>

        <populationFunction spec="ConstantPopulation">
            <popSize spec="RealParameter" value="1.0"/>
        </populationFunction>

        <trait spec="TraitSet" traitname="date-backward" id="traitSet">
            <taxa spec="TaxonSet" id="taxonSet">
                <taxon spec="Taxon" id="t1"/>
                <taxon spec="Taxon" id="t2"/>
                <taxon spec="Taxon" id="t3"/>
                <taxon spec="Taxon" id="t4"/>
                <taxon spec="Taxon" id="t5"/>
            </taxa>

            t1=0, t2=0.1, t3=0.2, t4=0.3, t5=0.4
        </trait>
    </tree>

    <data id="alignment" spec="SimulatedAlignment" tree="@simulated_tree"
          sequenceLength="1000" outputFileName="$(filebase).alignment.nexus">

        <siteModel spec="SiteModel">
            <mutationRate spec="RealParameter" value="0.05"/>
            <substModel spec="JukesCantor"/>
        </siteModel>
    </data>

    <run spec="MCMC" id="mcmc" chainLength="100">
        <state>
            <stateNode id="tree" spec="SimulatedLambdaCoalescentTree"
                       fileName="$(filebase).start.tree">
                <model spec="LambdaCoalescentModel">
                    <alpha spec="RealParameter" value="1.99999"/>
                    <taxonSet idref="taxonSet"/>
                </model>

                <populationFunction id="pop_func" spec="ConstantPopulation">
                    <popSize spec="RealParameter" value="1.0"/>
                </populationFunction>
                <trait spec="TraitSet" traitname="date-backward">
                    <taxa spec="TaxonSet">
                        <taxon idref="t1"/>
                        <taxon idref="t2"/>
                        <taxon idref="t3"/>
                        <taxon idref="t4"/>
                        <taxon idref="t5"/>
                    </taxa>

                    t1=0, t2=0.1, t3=0.2, t4=0.3, t5=0.4
                </trait>
            </stateNode>

            <stateNode idref="alpha"/>
        </state>

        <distribution spec="CompoundDistribution" id="posterior">
            <distribution spec="TreeLikelihood" id="treeLikelihood">
                <data idref="alignment"/>
                <tree idref="tree"/>
                <siteModel id="siteModel" spec="beast.evolution.sitemodel.SiteModel">
                    <substModel spec="beast.evolution.substitutionmodel.JukesCantor"/>
                    <mutationRate spec="RealParameter" value="0.05"/>
                </siteModel>
            </distribution>

            <distribution id="treePrior" spec="LambdaCoalescentDistribution">
                <collapsedTreeIntervals spec="CollapsedTreeIntervals"
                                        tree="@tree"/>

                <populationFunction spec="ConstantPopulation">
                    <popSize spec="RealParameter" value="1.0"/>
                </populationFunction>

                <model spec="LambdaCoalescentModel">
                    <alpha id="alpha" spec="RealParameter" value="1.5" lower="1" upper="2"/>
                    <taxonSet idref="taxonSet"/>
                </model>
            </distribution>

            <distribution id="parameterPriors" spec="CompoundDistribution">
                <distribution spec="Prior" x="@alpha">
                    <distr spec="beast.math.distributions.Uniform" lower="1" upper="2"/>
                </distribution>
            </distribution>
        </distribution>

        <operator spec="SPROperator" tree="@tree" weight="1.0"
                  rootAttachLambda="1.0"
                  probCoalAttach="0.5"/>

        <operator spec="pitchfork.operators.UniformOperator" tree="@tree" weight="1.0"/>

        <operator spec="ScaleOperator" tree="@tree" weight="1.0"/>

        <operator spec="ScaleOperator" parameter="@alpha" weight="1.0"/>

        <!--logger spec="Logger" logEvery="1">
            <log idref="treeLikelihood"/>
            <log idref="treePrior"/>
            <log idref="alpha"/>
            <log spec="PolytomyCountLogger" tree="@tree"/>
            <log spec="TreeStatLogger" tree="@tree"/>
        </logger-->

        <logger spec="Logger" logEvery="1" fileName="$(filebase).log">
            <log idref="treeLikelihood"/>
            <log idref="treePrior"/>
            <log idref="alpha"/>
            <log spec="PolytomyCountLogger" tree="@tree"/>
            <log spec="TreeStatLogger" tree="@tree"/>
        </logger>

        <logger spec="Logger" logEvery="1" fileName="$(filebase).trees">
            <log idref="tree"/>
        </logger>
    </run>
</beast>