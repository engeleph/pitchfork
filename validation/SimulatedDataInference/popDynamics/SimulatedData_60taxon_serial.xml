       namespace="beast.core
                 :beast.core.util
                 :beast.core.parameter
                 :beast.evolution.alignment
                 :beast.evolution.likelihood
                 :beast.evolution.tree
                 :beast.evolution.tree.coalescent
                 :beast.evolution.sitemodel
                 :beast.evolution.substitutionmodel
                 :beast.evolution.operators
                 :beast.math.distributions
                 :feast.simulation
                 :pitchfork.models
                 :pitchfork.models.pop
                 :pitchfork.operators
                 :pitchfork.util">

    <tree id="simulated_tree" spec="SimulatedBetaCoalescentTree"
               fileName="$(filebase).true.tree">
        <model spec="BetaCoalescentModel">
            <alpha spec="RealParameter" value="1.999"/>
            <taxonSet idref="taxonSet"/>
        </model>

        <populationFunction spec="ExponentialGrowth">
            <popSize spec="RealParameter" value="1.0"/>
            <growthRate spec="RealParameter" value="2.0"/>
        </populationFunction>

        <!--populationFunction spec="PiecewisePopulationFunction">
            <popSizes spec="RealParameter" value="10 1.0 10"/>
            <changeTimes spec="RealParameter" value="2 2.5"/>
        </populationFunction-->

